extends indexlayout

block content
  link(rel='stylesheet', type='text/css', href='/css/lib/slick/slick.css')
  link(rel='stylesheet', type='text/css', href='/css/lib/slick/slick-theme.css')
  script(type='text/javascript', src='/js/lib/slick.min.js')

  #cover
  #form-get-started
    .center-div
      .row
        .cancel âœ•
      .row.get-started-row
        .col-lg-5.form-image
          img.go(src='/images/go.png', width='100%', style='border-radius: 16px 0 0 16px;')
        .col-lg-7
          form.show-requirements(method='POST', id='show_requirements_form')
                input(type='hidden', name='_csrf', value=_csrf)
                span I am travelling to &nbsp;
                br
                input.get-started-input.typeahead(type='text', name='country', id='country', placeholder='Country', required, autocomplete='off')
                br
                span &nbsp;for&nbsp;
                br
                select.get-started-input(name='purpose', id='purpose', placeholder='Purpose', required)
                  option(value="Purpose", selected) Purpose
                br
                span &nbsp;with&nbsp;
                br
                span(style='color:#4a90e2;') &nbsp;Indian Passport&nbsp;
                .form-group.show-req
                  .col-sm-12
                      button.btn.btn-primary.show-requirements-button(type='submit') SHOW REQUIREMENTS

  .row.landing-row
    .col-lg-12.banner
      h1.banner_label This placement season, know who will be worth what.
    .col-lg-12.banner
      h3.banner_tagline Find the answer to the question at the back of your mind.
    .col-lg-12.get_started
      a(href='/auth/iitbsso').btn.btn-primary.btn-reset.black-theme-bg GET STARTED
  .container
    hr
    .row.workflow-row.flip-in-phone
      .col-md-6.col-sm-12.workflow-column-description
        h2.workflow-heading Search
        h3.workflow-description
          span Do a natural search for people
          br
          br
          ul
            li Name, Hostel, Hometown, Year of Joining, Department, Gender, Hobbies, Interests... Anything!
            br
            li Just type it in the search box.
            br
          span AND CONNECT WITH THEM.
      .col-md-6.col-sm-12.workflow-column-image
        img.workflow-image(src='/images/search.svg')
    hr
    .row.workflow-row
      .col-md-6.col-sm-12.workflow-column-image
        img.workflow-image(src='/images/money.svg')
      .col-md-6.col-sm-12.workflow-column-description
        h2.workflow-heading Predict
        h3.workflow-description 
          span Predict much they'll be worth when they graduate.
          br
          br
          ul
            li Form Filling
            br
            li Cover Letter Drafting
            br
            li Appointment Booking
            br
          span Get prerequisites done by an expert.
    hr
    .row.workflow-row.flip-in-phone
      .col-md-6.col-sm-12.workflow-column-description
        h2.workflow-heading Grow
        h3.workflow-description 
          span Grow you circle.
          br
          br
          ul
            li See the amazing ways in which people are related to you
            br
            li Understand your relationship better with people
            br
          span Get a T-shirt on growing your cirle to 100 people.
      .col-md-6.col-sm-12.workflow-column-image
        img.workflow-image(src='/images/brain.svg')
    hr
  script.
    function clickLogin(login) {
      $('#cover').css('display', 'inline');
      $('.center-div').css({
        '-webkit-animation-name': 'example', /* Safari 4.0 - 8.0 */
        '-webkit-animation-duration': '0.5s', /* Safari 4.0 - 8.0 */
        'animation-name': 'example',
        'animation-duration': '0.5s'
      });
      $('#form-get-started').css({
        'display':'inline'
      });
      $('#country').focus();
      $('.dropdown-menu.typeahead').css({
        'width': $( window ).width()>480 ? '440px': '120px' ,
        'font-size': $( window ).width()>480 ? '24px': '20px'
      });
    }
    $('.cancel, #cover, #form-get-started > :not(.center-div)').click(e=>{
      $('.center-div').css({
        '-webkit-animation-name': 'go', /* Safari 4.0 - 8.0 */
        '-webkit-animation-duration': '0.5s', /* Safari 4.0 - 8.0 */
        'animation-name': 'go',
        'animation-duration': '0.5s'
      });
      setTimeout(()=>{
        $('#cover').css('display', 'none');        
        $('#form-get-started').css('display','none');
      }, 400);
    });
    $('#cover').click(e=>{
      $('.center-div').css({
        '-webkit-animation-name': 'go', /* Safari 4.0 - 8.0 */
        '-webkit-animation-duration': '0.5s', /* Safari 4.0 - 8.0 */
        'animation-name': 'go',
        'animation-duration': '0.5s'
      });
      setTimeout(()=>{
        $('#cover').css('display', 'none');        
        $('#form-get-started').css('display','none');
      }, 400);
    });
    $(document).ready(function(){
      $('.reviews').slick({
        infinite: true,
        responsive: [{

        breakpoint: 1600,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 3
        }

      }, {

        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 2
        }

      }, {

        breakpoint: 480,
        slidesToShow: 1,
        slidesToScroll: 1
      }]
      });
    });